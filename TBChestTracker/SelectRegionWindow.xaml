<Window x:Class="TBChestTracker.SelectRegionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TBChestTracker"
        mc:Ignorable="d"
        Title="SelectRegionWindow" Height="450" Width="800" WindowState="Maximized" AllowsTransparency="True" Background="#00000055" WindowStyle="None">
    <Grid>
        <Canvas VerticalAlignment="Top" HorizontalAlignment="Center" Height="32" Width="300" SnapsToDevicePixels="True" Margin="0,15">
            <Rectangle RadiusX="5" RadiusY="5" Height="32" Width="300" Stretch="Fill" Fill="#ffffffff"/>
            <TextBlock Text="Adjust Selection Rectangle To Area To Capture" 
                       TextWrapping="Wrap" Canvas.Left="55" Canvas.Top="0" 
                       FontSize="12" FontWeight="Bold" Width="200" TextAlignment="Center"/>
        </Canvas>
    </Grid>
</Window>

<Window x:Class="TBChestTracker.PreviewCroppedImageViewer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TBChestTracker"
        mc:Ignorable="d"
        Title="PreviewCroppedImageViewer" Topmost="True" WindowStyle="None" WindowStartupLocation="Manual" ResizeMode="NoResize" SizeToContent="WidthAndHeight" 
        d:Height="100" d:Width="100"
        Loaded="Window_Loaded" Closed="Window_Closed" Background="Black">
    <Grid>
        <Border BorderThickness="3" BorderBrush="White" Opacity="0.75"/>
        <Image Source="{Binding PreviewCroppedBitmap, Mode=TwoWay}" Stretch="None"/>
    </Grid>
</Window>

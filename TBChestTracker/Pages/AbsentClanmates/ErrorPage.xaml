<Page x:Class="TBChestTracker.Pages.AbsentClanmates.ErrorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TBChestTracker.Pages.AbsentClanmates"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="400"
      Title="ErrorPage" Loaded="Page_Loaded" Unloaded="Page_Unloaded">
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="#fff">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Image Grid.Column="0" Source="pack://application:,,,/Images/ui/errorIcon.png" Height="128" Width="128" Margin="25"/>
        <TextBlock Grid.Row="1" Text="You don't have enough dates inside Clan Chest Database to perform this operation." Margin="10,5" TextWrapping="Wrap"/>
        <Grid Grid.Row="2" Background="#efefef" Height="36" VerticalAlignment="Bottom">
            <Button x:Name="CloseBtn" Click="CloseBtn_Click" Content="Close" HorizontalAlignment="Right" VerticalAlignment="Center" Width="100" Height="24" Margin="15,0"/>
        </Grid>
    </Grid>
</Page>

<Page x:Class="TBChestTracker.Pages.GeneralSettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TBChestTracker.Pages"
      xmlns:ui="clr-namespace:TBChestTracker.UI"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="GeneralSettingsPage" Loaded="Page_Loaded" Unloaded="Page_Unloaded">
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            
        </Grid.RowDefinitions>
        
        <TextBlock  Grid.Row="0" Grid.Column="0" Text="Clan Root Path" Margin="0,5"/>
        <TextBlock Grid.Row="1" Grid.Column="0" Text="Tesseract Data Path" Margin="0,5"/>
        <TextBlock Grid.Row="2" Grid.Column="0" Text="UI Language" Margin="0,5"/>
        <TextBlock Grid.Row="3" Grid.Column="0" Text="Use OCR Languages" Margin="0,5"/>
        <TextBlock Grid.Row="5" Grid.Column="0" Text="Absent Clanmate Duration" Margin="0,5"/>
        <TextBlock Grid.Row="6" Grid.Column="0" Text="Absent Clanmate Action" Margin="0,5"/>
        <ui:FancyPicker Grid.Column="1" Grid.Row="0" Margin="0,10,0,5" ToolTip="Root directory where all newly created clans will be stored."
                        Height="18" BorderBrush="#aaa" Source="{Binding ClanRootFolder}"
                        Corners="10" 
                        BorderThickness="1" Padding="1" Background="#fff" Foreground="#000" Click="FancyPicker_Click"/>

        <ui:FancyPicker Grid.Column="1" Grid.Row="1" Margin="0,1,0,5" ToolTip="Where all the Tesseract Learned Data Models are stored."
                Height="18" BorderBrush="#aaa" 
                Corners="10" 
                BorderThickness="1" Padding="1" Background="#fff" Foreground="#000" Source="{Binding TessDataFolder}" Click="FancyPicker_Click"/>

        <ComboBox x:Name="UILanguageComboBox" Grid.Row="2" Grid.Column="1" Width="200" HorizontalAlignment="Left" Margin="0,0" SelectedIndex="0">
            <ComboBoxItem Content="English"/>
        </ComboBox>
        
        <UniformGrid Grid.Column="1" Grid.Row="3" Columns="4" HorizontalAlignment="Left" Margin="0,5,0,5" x:Name="CHECKBOXES_PARENT">
                <CheckBox Content="English" Margin="3,5" Tag="eng"/>
                <CheckBox Content="French" Margin="3,5" Tag="fra"/>
                <CheckBox Content="Spanish" Margin="3,5" Tag="spa"/>
                <CheckBox Content="Arabic" Margin="3,5" Tag="ara"/>
                <CheckBox Content="Turkish" Margin="3,5" Tag="tur"/>
                <CheckBox Content="Taditional Chinese" Margin="3,5" Tag="chi_tra"/>
                <CheckBox Content="Simplified Chinese" Margin="3,5" Tag="chi_sim"/>
                <CheckBox Content="Korean" Margin="3,5" Tag="kor"/>
                <CheckBox Content="Ukranian" Margin="3,5" Tag="ukr"/>
                <CheckBox Content="Russian" Margin="3,5" Tag="rus"/>
                <CheckBox Content="Polish" Margin="3,5" Tag="pol"/>
                <CheckBox Content="German" Margin="3,5" Tag="deu"/>
                <CheckBox Content="Japanese" Margin="3,5" Tag="jpn"/>
                <CheckBox Content="All" Margin="3,5"/>
            </UniformGrid>
        <TextBlock Grid.Column="1" Grid.Row="4" Text="* Using ALL will lead to longer startup time." FontWeight="Bold"/>
        <ComboBox Grid.Row="5" Grid.Column="1" Width="200" HorizontalAlignment="Left" x:Name="AbsentClanmateDurationComboBox" Text="{Binding AbsentClanmateDuration}" SelectedIndex="0">
            <ComboBoxItem Content="Week"/>
            <ComboBoxItem Content="Month"/>
        </ComboBox>
        <ComboBox Grid.Row="6" Grid.Column="1" Width="200" HorizontalAlignment="Left" x:Name="AbsentClanmateActionCombobox" Text="{Binding AbsentClanmateAction}" SelectedIndex="0">
            <ComboBoxItem Content="Nothing"/>
            <ComboBoxItem Content="Delete"/>
        </ComboBox>
        <TextBlock Grid.Row="7" Grid.Column="1" FontWeight="Bold" Text="* If clanmates persist to have 0 chests throughout the duration, the specified action will be done."/>
    </Grid>
</Page>

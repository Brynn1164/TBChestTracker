<Window x:Class="TBChestTracker.ConsoleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TBChestTracker"
        xmlns:Loggy="clr-namespace:com.HellStormGames.Logging;assembly=Loggy"
        mc:Ignorable="d"
        Title="Console" Height="450" Width="800" 
        Topmost="True"
        ResizeMode="CanResizeWithGrip" DataContext="{Binding Console.Instance}" WindowStartupLocation="CenterScreen" ShowInTaskbar="False" Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="24"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <ToolBarPanel Grid.Row="0">
            <ToolBar Height="24">
                
            </ToolBar>
        </ToolBarPanel>
        
        <TextBox x:Name="ConsoleViewer" Grid.Row="1" IsReadOnly="True" Text="{Binding Message, Mode=TwoWay}" TextWrapping="Wrap" 
                 HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" TextChanged="ConsoleViewer_TextChanged"/>
    </Grid>
</Window>

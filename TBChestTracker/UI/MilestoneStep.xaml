<UserControl x:Class="TBChestTracker.UI.MilestoneStep"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TBChestTracker.UI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Canvas Height="{Binding ActualHeight}" Width="{Binding ActualWidth}">
        <Ellipse Height="{Binding ActualHeight}" Width="{Binding ActualWidth}" Fill="{Binding Background}" Stroke="Transparent" StrokeThickness="0"/>
    </Canvas>
</UserControl>
